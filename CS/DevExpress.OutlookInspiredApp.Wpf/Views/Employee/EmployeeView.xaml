                                    <dxe:ProgressBarEditSettings ContentDisplayMode="Value" DisplayFormat="{}{0}%"/>
                                </dxg:GridColumn.EditSettings>
                            </dxg:GridColumn>
                        </dxg:GridControl.Columns>
                    </dxg:GridControl>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
